# Wikipedia Knowledge Archive Configuration

wikipedia:
  # URL for Kiwix ZIM file download
  zim_source_url: "https://download.kiwix.org/zim/wikipedia/"
  # File pattern to match latest Wikipedia ZIM file
  file_pattern: "wikipedia_en_all_maxi_*.zim"
  # Local storage path
  storage_path: "/home/rossini/projetos/knowledge/data/wikipedia"
  # Backup path
  backup_path: "/home/rossini/projetos/knowledge/backup/wikipedia"
  # Update check interval in days
  check_interval: 30
  # Maximum number of backup versions to keep
  max_backups: 3

logging:
  level: "INFO"
  file: "/home/rossini/projetos/knowledge/logs/wikipedia.log"
  max_size_mb: 10
  backup_count: 5

metrics:
  enabled: true
  port: 9090
  path: "/metrics"
